<div class="flex flex-wrap justify-center gap-10 pt-5 py-10">
    <div class="card-body">
      <% if current_user && current_user.own?(review) %>
        <div class="text-right"> 
          <%= render 'reviews/destroy_button', review: review %>
        </div>
      <% end %>
      <h2 class="text-xl font-bold"><%= review.user&.name || "匿名ユーザー" %></h2>
      <p><%= review.body %></p>
  </div>
</div>