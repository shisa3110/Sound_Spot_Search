<div class="flex flex-wrap justify-center gap-10 pt-5 py-10">
  <div class="w-full max-w-lg p-4 rounded-lg shadow-lg bg-base-200">
    <h2 class="text-lg font-bold my-2 text-center">ユーザー情報編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card-body">
    <div class="form-control">
      <label class="label">
        <span class="label-text">ユーザー名</span>
      </label>
      <%= f.text_field :name, placeholder: "ユーザー名", class: "input input-bordered", required: true %>
    </div>

    <div class="form-control">
      <label class="label">
        <span class="label-text">メールアドレス</span>
      </label>
      <%= f.email_field :email, placeholder: "メールアドレス", class: "input input-bordered", required: true %>
    </div>

    <fieldset class="fieldset">
      <label class="label">
        <span class="label-text">性別</span>
      </label>
      <%= f.select :gender, User.enum_options_for_select(:gender) %>
    </fieldset>

    <div class="form-control">
      <label class="label">
        <span class="label-text">パスワード</span>
        <% if @minimum_password_length %>
          <span class="label-text-alt">
            <%= @minimum_password_length %> 文字以上
          </span>
        <% end %>
      </label>
      <%= f.password_field :password, placeholder: "変更する場合のみ入力", class: "input input-bordered"%>
    </div>

    <div class="form-control">
      <label class="label">
        <span class="label-text">パスワード（確認用）</span>
      </label>
      <%= f.password_field :password_confirmation, placeholder: "変更する場合のみ入力（確認用）", class: "input input-bordered" %>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "保存", class: "btn btn-active" %>
    </div>
</div>
  <% end %>
  </div>
</div>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
